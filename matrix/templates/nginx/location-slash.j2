location / {
    proxy_pass              {{ scheme }}://127.0.0.1:{{ port }}$port_id;
    proxy_set_header        Host $host;
    proxy_set_header        X-Real-IP $remote_addr;
    proxy_set_header        X-Forwarded-For $remote_addr;

    proxy_connect_timeout   9000;
    proxy_send_timeout      9000;
    proxy_read_timeout      9000;
    send_timeout            9000;

    {% if nginx.httpauth %}
        include auth;
    {% endif %}
}

access_log /var/log/nginx/{{ domain.split('.') | first }}.access.log;
error_log /var/log/nginx/{{ domain.split('.') | first }}.error.log;
